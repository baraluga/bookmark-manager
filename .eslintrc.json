{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "plugin:ngrx/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "ngrx"
  ],
  "rules": {
    "import/prefer-default-export": "off",
    "complexity": [
      "error",
      2
    ],
    "max-lines": [
      "error",
      150
    ],
    "max-lines-per-function": [
      "error",
      10
    ]
  }
}